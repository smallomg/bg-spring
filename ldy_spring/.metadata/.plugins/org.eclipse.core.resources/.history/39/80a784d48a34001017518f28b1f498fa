package com.example.demo.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;
import com.example.demo.Session.UserSession;
import com.example.demo.dto.UserDTO;
import com.example.demo.service.UserService;

import jakarta.servlet.http.Cookie;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

@Controller
public class MyController {

	@Autowired
	private UserSession userSession;

	@Autowired
	private UserService userService;

	@GetMapping("/")
	public String root() {
		System.out.println("root.....");
		return "index";
	}

	@GetMapping("/login")
	public String login() {
		return "login";
	}

	@PostMapping("/login")
	public String login(
	        @RequestParam("id") String id, 
	        @RequestParam("pw") String pw, 
	        HttpSession session,
	        HttpServletRequest request, 
	        RedirectAttributes rttr,
	        HttpServletResponse response
	) {

	    UserDTO result = userService.loginCheck(id, pw); // ğŸ”§ DB ì¸ì¦

	    if (result != null) {
	        // âœ… ì„¸ì…˜ ì €ì¥ (ê¸°ë³¸ ì¸ì¦ ìœ ì§€ìš©)
	        userSession.login(result);

	        // âœ… ì¿ í‚¤ ì €ì¥ (ìë™ ë¡œê·¸ì¸ ë“± ëª©ì )
	        Cookie idCookie = new Cookie("loginId", result.getId()); // ê°ì²´ X, IDë§Œ ì €ì¥
	        idCookie.setPath("/");               // ì „ì²´ ê²½ë¡œì—ì„œ ì‚¬ìš©
	        idCookie.setMaxAge(60 * 60 * 24);    // 1ì¼ ë™ì•ˆ ìœ ì§€
	        idCookie.setHttpOnly(true);          // JS ì ‘ê·¼ ë°©ì§€
	        idCookie.setSecure(true);            // HTTPSì—ì„œë§Œ ì „ì†¡ (í…ŒìŠ¤íŠ¸ ì‹œ ìƒëµ ê°€ëŠ¥)
	        response.addCookie(idCookie);
	        System.out.println("ì¿ í‚¤ ì €ì¥ ì™„ë£Œ");
	        
	        return "redirect:/success";
	    } else {
	        rttr.addFlashAttribute("msg", "ì•„ì´ë”” ë˜ëŠ” ë¹„ë°€ë²ˆí˜¸ê°€ ì˜ëª»ë˜ì—ˆìŠµë‹ˆë‹¤.");
	        return "redirect:/login";
	    }
	}


	@GetMapping("/success")
	public String success(HttpServletRequest request, Model model, RedirectAttributes rttr) {
	    // 1. ì„¸ì…˜ ë¨¼ì € í™•ì¸
	    if (!userSession.isLogedIn()) {
	        // 2. ì¿ í‚¤ë¡œ ë¡œê·¸ì¸ ì—¬ë¶€ í™•ì¸ ì‹œë„
	        Cookie[] cookies = request.getCookies();
	        String idFromCookie = null;

	        if (cookies != null) {
	            for (Cookie c : cookies) {
	                if (c.getName().equals("loginId")) {
	                    idFromCookie = c.getValue();
	                }
	            }
	        }

	        if (idFromCookie != null) {
	            // DBì—ì„œ ì‚¬ìš©ì ì¡°íšŒ í›„ ì„¸ì…˜ì— ë‹¤ì‹œ ì €ì¥
	            UserDTO user = userService.findById(idFromCookie);
	            if (user != null) {
	                userSession.login(user); // ì„¸ì…˜ ë³µêµ¬
	            } else {
	                rttr.addFlashAttribute("msg", "ë¡œê·¸ì¸ ì •ë³´ê°€ ìœ íš¨í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.");
	                return "redirect:/login";
	            }
	        } else {
	            rttr.addFlashAttribute("msg", "ë¡œê·¸ì¸ í›„ ì´ìš©í•´ì£¼ì„¸ìš”");
	            return "redirect:/login";
	        }
	    }

	    model.addAttribute("user", userSession.getLoginUser());
	    return "success";
	}


	@GetMapping("/logout")
	public String logout(HttpServletResponse response, HttpSession session) {

	    // 1. ì„¸ì…˜ ì‚­ì œ
	    session.invalidate();

	    // 2. ì¿ í‚¤ ì‚­ì œ
	    Cookie cookie = new Cookie("loginId", null);
	    cookie.setMaxAge(0); // ì¦‰ì‹œ ë§Œë£Œ
	    cookie.setPath("/"); // ìƒì„± ì‹œì™€ ë™ì¼í•´ì•¼ í•¨
	    response.addCookie(cookie);
	    System.out.println("ì¿ í‚¤ ì‚­ì œ");

	    return "redirect:/login";
	}


	@GetMapping("/set-cookie")
	public @ResponseBody String setCookie(HttpServletResponse response) {
		Cookie cookie = new Cookie("Mycookie", "sogood");
		cookie.setPath("/");
		response.addCookie(cookie);

		return "cookie-set";
	}

	@GetMapping("/read-cookie")
	public @ResponseBody String readCookie(HttpServletRequest request) {
		Cookie[] cookies = request.getCookies();
		if(cookies != null) {
			for(Cookie cookie : cookies) {
				if(cookie.getName().equals("Mycookie")) {
					System.out.println(cookie.getValue());
				}
			}
			
		}
		return "cookie read";
	}
	
	// ì‚¬ìš©ì ì¸ì¦ ì²˜ë¦¬
}
